<div class="accordion" id="myData"></div>

  <script>
fetch('http://localhost:3000/api/news')
   .then(response => response.json())
   .then(function (data) {
                appendData(data);
            })
            .catch(function (err) {
                console.log('error: ' + err);
            });
        function appendData(data) {
            let mainContainer = document.getElementById("myData");
            for (let i = 0; i < data.length; i++) {
              //date
                let spanDate = document.createElement("span");
                spanDate.classList.add("news_date");
                spanDate.innerHTML = data[i].date

                let divTopic = document.createElement("p");
                divTopic.classList.add("news_topic");
                divTopic.innerHTML = data[i].topic
              
                mainContainer.appendChild(spanDate);
                mainContainer.appendChild(divTopic);
            }
        }
  </script>